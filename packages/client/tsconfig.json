{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"~arquero": ["./src/arquero/index.ts"],
			"~components": ["./src/components/index.ts"],
			"~components/*": ["./src/components/*"],
			"~resources": ["./src/resources/index.ts"],
			"~resources/*": ["./src/resources/*"],
			"~state": ["./src/state/index.ts"],
			"~state/*": ["./src/state/*"],
			"~enums": ["./src/common/enums/index.ts"],
			"~interfaces": ["./src/common/interfaces/index.ts"],
			"~utils": ["src/common/utils/index.ts"],
			"~types": ["src/common/types/index.ts"],
			"~utils/*": ["src/common/utils/*"],
			"~hooks": ["./src/hooks/index.ts"],
			"~styles": ["./src/common/styles/index.ts"]
		},
		"lib": ["ESNext", "DOM", "DOM.Iterable", "ES2020.BigInt"],
		"outDir": "lib",
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"declaration": true,
		"incremental": true,
		"noImplicitAny": false,
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["./src/"],
	"exclude": ["**/__tests__/**"]
}
