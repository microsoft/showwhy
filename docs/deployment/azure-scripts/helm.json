{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "_generator": {
            "name": "bicep",
            "version": "0.8.9.13224",
            "templateHash": "5490088144024630038"
        }
    },
    "parameters": {
        "identityName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "causal Registry URL"
            }
        },
        "clusterName": {
            "type": "string",
            "defaultValue": "aks201cluster",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "dnsPrefix": {
            "type": "string",
            "defaultValue": "dcs201",
            "metadata": {
                "description": "Optional DNS prefix to use with hosted Kubernetes API server FQDN."
            }
        },
        "nodeResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Resource group of AKS node"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "publicIP",
            "resourceGroup": "[parameters('nodeResourceGroup')]",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "dnsPrefix": {
                        "value": "[parameters('dnsPrefix')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "metadata": {
                        "_generator": {
                            "name": "bicep",
                            "version": "0.8.9.13224",
                            "templateHash": "6445570423976963169"
                        }
                    },
                    "parameters": {
                        "dnsPrefix": {
                            "type": "string",
                            "metadata": {
                                "description": "Optional DNS prefix to use with hosted Kubernetes API server FQDN."
                            }
                        }
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Network/publicIPAddresses",
                            "apiVersion": "2020-08-01",
                            "name": "kubernetesip",
                            "location": "[resourceGroup().location]",
                            "sku": {
                                "name": "Standard"
                            },
                            "properties": {
                                "publicIPAllocationMethod": "Static",
                                "publicIPAddressVersion": "IPv4",
                                "dnsSettings": {
                                    "domainNameLabel": "[parameters('dnsPrefix')]"
                                }
                            }
                        }
                    ],
                    "outputs": {
                        "publicIP": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', 'kubernetesip')).ipAddress]"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "helmScripts",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'publicIP')]"
            ],
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "identityName": {
                        "value": "[parameters('identityName')]"
                    },
                    "clusterName": {
                        "value": "[parameters('clusterName')]"
                    },
                    "dnsPrefix": {
                        "value": "[parameters('dnsPrefix')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "metadata": {
                        "_generator": {
                            "name": "bicep",
                            "version": "0.8.9.13224",
                            "templateHash": "6445570423976963169"
                        }
                    },
                    "parameters": {
                        "identityName": {
                            "type": "string",
                            "metadata": {
                                "description": "Location of all resources to be deployed"
                            }
                        },
                        "clusterName": {
                            "type": "string",
                            "defaultValue": ""
                        },
                        "dnsPrefix": {
                            "type": "string",
                            "defaultValue": ""
                        },
                        "utcValue": {
                            "type": "string",
                            "defaultValue": "[utcNow()]"
                        }
                    },
                    "variables": {
                        "causalRegistry": "ghcr.io/microsoft/showwhy/",
                        "helmAppLocation": "oci://ghcr.io/microsoft/showwhy/helm/causal-services:0.3.0",
                        "_artifactsLocation": "https://raw.githubusercontent.com/microsoft/showwhy/azure/",
                        "installScriptUri": "[uri(variables('_artifactsLocation'), 'helm.sh')]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Resources/deploymentScripts",
                            "apiVersion": "2020-10-01",
                            "name": "customScript",
                            "location": "[resourceGroup().location]",
                            "kind": "AzureCLI",
                            "identity": {
                                "type": "UserAssigned",
                                "userAssignedIdentities": {
                                    "[format('{0}', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('identityName')))]": {}
                                }
                            },
                            "properties": {
                                "forceUpdateTag": "[parameters('utcValue')]",
                                "azCliVersion": "2.10.1",
                                "timeout": "PT30M",
                                "environmentVariables": [
                                    {
                                        "name": "RESOURCEGROUP",
                                        "secureValue": "[resourceGroup().name]"
                                    },
                                    {
                                        "name": "CLUSTER_NAME",
                                        "secureValue": "[parameters('clusterName')]"
                                    },
                                    {
                                        "name": "DNS_PREFIX",
                                        "secureValue": "[parameters('dnsPrefix')]"
                                    },
                                    {
                                        "name": "CAUSAL_REGISTRY",
                                        "secureValue": "[variables('causalRegistry')]"
                                    },
                                    {
                                        "name": "PUBLICIP",
                                        "secureValue": "[reference('publicIP').outputs.publicIP.value]"
                                    },
                                    {
                                        "name": "SUBSCRIPTION",
                                        "secureValue": "[subscription().subscriptionId]"
                                    },
                                    {
                                        "name": "HELM_APP_LOCATION",
                                        "secureValue": "[variables('helmAppLocation')]"
                                    }
                                ],
                                "primaryScriptUri": "[variables('installScriptUri')]",
                                "cleanupPreference": "OnExpiration",
                                "retentionInterval": "P1D"
                            }
                        }
                    ]
                }
            }
        }
    ]
}