                                        "secureValue": "[parameters('clusterName')]"
                                    },
                                    {
                                        "name": "DOMAIN",
                                        "secureValue": "[parameters('domain')]"
                                    },
                                    {
                                        "name": "CLIENT_ID",
                                        "secureValue": "[parameters('clientId')]"
                                    },
                                    {
                                        "name": "CLIENT_SECRET",
                                        "secureValue": "[parameters('clientSecret')]"
                                    },
                                    {
                                        "name": "LOCATION",
