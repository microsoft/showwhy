{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string",
      "defaultValue": "showwhy",
      "minLength": 1,
      "metadata": {
        "description": "The name of the Managed Cluster resource"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "minLength": 1,
      "metadata": {
        "description": "The location for the resources"
      }
    },
    "dnsPrefix": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "DNS prefix to use with hosted Kubernetes API server FQDN"
      }
    },
    "ipName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "IP name  to use with hosted Kubernetes API server"
      }
    },
    "osDiskSizeGB": {
      "type": "int",
      "defaultValue": 0,
      "maxValue": 1023,
      "minValue": 0,
      "metadata": {
        "description": "Disk size (in GB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize"
      }
    },
    "agentCount": {
      "type": "int",
      "defaultValue": 3,
      "maxValue": 50,
      "minValue": 1,
      "metadata": {
        "description": "The number of nodes for the cluster"
      }
    },
    "agentVMSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
        "description": "The size of the Virtual Machine"
      }
    },
    "clientId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "App registration's client ID if authentication should be enabled"
      }
    },
    "clientSecret": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "App registration's client secret if authentication should be enabled"
      }
    }
  },
  "variables": {
    "domain": "[concat(parameters('dnsPrefix'), '.', parameters('location'), '.cloudapp.azure.com')]",
    "helmAppLocation": "oci://ghcr.io/microsoft/showwhy/causal-services",
    "nodeResourceGroup": "[concat('MC_', resourceGroup().name, '_', parameters('clusterName'), '_', parameters('location'))]"
  },
  "resources": [
    {
      "apiVersion": "2022-09-01",
      "name": "pid-c856c6f5-b33d-4184-b0fa-0b3fd2f311d5-partnercenter",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "aksDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri('https://raw.githubusercontent.com/microsoft/showwhy/deploy-azure1/docs/deployment/azure-template/nestedtemplates/', 'aks.json')]",
          "templateLinkType": "Linked",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "dnsPrefix": {
            "value": "[parameters('dnsPrefix')]"
          },
          "osDiskSizeGB": {
            "value": "[parameters('osDiskSizeGB')]"
          },
          "agentCount": {
            "value": "[parameters('agentCount')]"
          },
          "agentVMSize": {
            "value": "[parameters('agentVMSize')]"
          },
          "nodeResourceGroup": {
            "value": "[variables('nodeResourceGroup')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "helmDeployment",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'aksDeployment')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "mode": "Incremental",
          "uri": "[uri('https://raw.githubusercontent.com/microsoft/showwhy/deploy-azure1/docs/deployment/azure-template/nestedtemplates/', 'helm.json')]",
          "templateLinkType": "Linked",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "identityName": {
            "value": "[reference('aksDeployment').outputs.identityName.value]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "helmAppLocation": {
            "value": "[variables('helmAppLocation')]"
          },
          "dnsPrefix": {
            "value": "[parameters('dnsPrefix')]"
          },
          "nodeResourceGroup": {
            "value": "[variables('nodeResourceGroup')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "authDeployment",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'helmDeployment')]"
      ],
      "condition": "[not(empty(parameters('clientId')))]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri('https://raw.githubusercontent.com/microsoft/showwhy/deploy-azure1/docs/deployment/azure-template/nestedtemplates/', 'auth.json')]",
          "templateLinkType": "Linked",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "identityName": {
            "value": "[reference('aksDeployment').outputs.identityName.value]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "domain": {
            "value": "[variables('domain')]"
          },
          "helmAppLocation": {
            "value": "[variables('helmAppLocation')]"
          },
          "clientId": {
            "value": "[parameters('clientId')]"
          },
          "clientSecret": {
            "secureValue": "[parameters('clientSecret')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "URL": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'helmDeployment')).outputs.URL.value]"
    }
  }
}