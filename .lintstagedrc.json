{
	"*.{json,md}": ["essex prettify --staged"],
	"javascript/**/*.*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
		"essex lint --fix --staged"
	],
	"python/showwhy-backend/**/*": [
		"bash -c \"(cd python/showwhy-backend && poetry run isort .)\"",
		"bash -c \"(cd python/showwhy-backend && poetry run black .)\""
	],
	"python/showwhy-interface/**/*": [
		"bash -c \"(cd python/showwhy-inference && poetry run isort .)\"",
		"bash -c \"(cd python/showwhy-inference && poetry run black .)\""
	]
}
