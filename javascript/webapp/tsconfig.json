{
	"extends": "@essex/tsconfig-base",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"~components": ["./src/components/index.ts"],
			"~components/*": ["./src/components/*"],
			"~resources": ["./src/resources/index.ts"],
			"~resources/*": ["./src/resources/*"],
			"~state": ["./src/state/index.ts"],
			"~state/*": ["./src/state/*"],
			"~utils": ["./src/utils/index.ts"],
			"~utils/*": ["./src/utils/*"],
			"~data/*": ["./src/data/*"],
			"~hooks": ["./src/hooks/index.ts"],
			"~constants": ["./src/constants.ts"]
		},
		"lib": ["ESNext", "DOM", "DOM.Iterable", "ES2020.BigInt"],
		"outDir": "lib",
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"incremental": true,
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": [
		"./src",
		"../types/src/workspace/DefaultDatasetResult.ts",
		"../types/src/workspace/DataTableDefinition.ts",
		"../types/src/workspace/Workspace.ts",
		"../types/src/workspace/FileDefinition.ts",
		"../types/src/workspace/ProjectSource.ts",
		"../types/src/files/DownloadType.ts",
		"../types/src/files/ZipFileData.ts",
		"../components/src/DegreeDropdown/DegreeDropdown.tsx"
	]
}
