	"main": "src/index.ts",
	"publishConfig": {
		"main": "dist/cjs/index.js",
		"module": "dist/esm/index.js",
		"typings": "dist/typings/index.d.ts"
	},
	"scripts": {
		"clean": "essex clean build",
		"bundle": "vite build",
		"build": "yarn typecheck && yarn bundle",
		"typecheck": "tsc -b .",
		"build-dev": "yarn typecheck && yarn bundle --mode dev",
		"build:webapp-dev": "yarn build-dev && yarn archive",
		"build:only": "yarn build",
		"build:webapp": "yarn build && yarn archive",
		"start": "vite",
		"start:webapp": "yarn start",
		"start:static": "http-server -p 3000 dist",
		"archive": "essex zip --baseDir dist deploy.zip '**/*'",
		"test": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --no-cache --reporters=default --reporters=jest-junit",
		"test:jest": "yarn test",
		"test:cov": "jest --coverage"
	},
